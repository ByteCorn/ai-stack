{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://ollama:11434/v1"
      },
      "models": {
        "gemma3:27b ": {
          "name": "gemma"
        },
        "deepseek-r1:32b": {
          "name": "deepseek",
        },
        "gpt-oss:20b": {
          "name": "gpt-oss",
        }
      }
    }
  },

  "agent": {
    "alice": {
      "description": "Primary project management agent that breaks down work into epics, stories, and tasks and coordinates other agents.",
      "mode": "primary",
      "model": "ollama/gemma3:27b",
      "prompt": "{file:/config/agents/alice.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false
      }
    },

    "bob": {
      "description": "Consultant research and analysis agent for exploring requirements, patterns, and external knowledge; used by the PM as needed.",
      "mode": "subagent",
      "model": "ollama/gpt-oss:20b",
      "prompt": "{file:/config/agents/bob.md}",
      "tools": {
        "write": true,
        "edit": false,
        "bash": false
      }
    },

    "eve": {
      "description": "Senior backend Python expert for architecture and implementation.",
      "mode": "subagent",
      "model": "ollama/deepseek-r1:32b",
      "prompt": "{file:/config/agents/eve.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  }
}
