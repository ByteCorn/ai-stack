{
  "$schema": "https://opencode.ai/config.json",
  "model": "ollama/qwen3-coder:30b",

  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://ollama:11434/v1"
      },
      "models": {
        "gemma3:27b": {},
        "deepseek-r1:32b": {},
        "qwen3-coder:30b": {},
        "gpt-oss:20b": {},
        "devstral-small-2:latest": {}
      }
    }
  },

  "agent": {
    "alice": {
      "description": "Primary project management agent that breaks down work into epics, stories, and tasks and coordinates other agents.",
      "mode": "primary",
      "model": "ollama/qwen3-coder:30b",
      "prompt": "{file:/config/agents/alice.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false
      }
    },

    "bob": {
      "description": "Consultant research and analysis agent for exploring requirements, patterns, and external knowledge; used by the PM as needed.",
      "mode": "subagent",
      "model": "ollama/devstral-small-2:latest",
      "prompt": "{file:/config/agents/bob.md}",
      "tools": {
        "write": true,
        "edit": false,
        "bash": false
      }
    },

    "eve": {
      "description": "Senior backend Python expert for architecture and implementation.",
      "mode": "subagent",
      "model": "ollama/gpt-oss:20b",
      "prompt": "{file:/config/agents/eve.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },

    "angel": {
      "description": "Ты ангел!",
      "mode": "primary",
      "model": "ollama/deepseek-r1:32b",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  },

  "mcp": {
    "forgejo": {
      "type": "remote",
      "url": "http://forgejomcp:8080/sse",
      "enabled": true
    }
  },

  "autoshare": false,
  "autoupdate": true
}
